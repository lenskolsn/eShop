<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">{{action}} sản phẩm</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label class="form-label">Name</label>
                            <input type="text" class="form-control" v-model="proData.name" />
                        </div>                        
                        <div class="form-group">
                            <label class="form-label">Price</label>
                            <input type="number" class="form-control" v-model="proData.price" />
                        </div>                        
                        <div class="form-group">
                            <label class="form-label">Description</label>
                            <input type="text" type="text" class="form-control" v-model="proData.description" />
                        </div>                        
                        <div class="form-group">
                            <label class="form-label">Instock</label>
                            <input type="number" class="form-control" v-model="proData.inStock" />
                        </div>                        
                        <div class="form-group">
                            <label class="form-label">Dicount Price</label>
                            <input type="number" class="form-control" v-model="proData.discountPrice" />
                        </div>                        
                        <div class="form-group">
                            <label class="form-label">Category</label>
                            @*<select class="form-select" v-model="proData.categoryId">
                                <option v-for="item in categories" :value="item.id" :selected="item.id == proData.categoryId">{{item.name}}</option>
                            </select>*@
                            <vc:select-list-category v-model="proData.categoryId"></vc:select-list-category>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label class="form-label">Image</label>
                            <input class="form-control" type="file"/>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" v-on:click="addOrUpdate">{{action}} dữ liệu</button>
            </div>
        </div>
    </div>
</div>